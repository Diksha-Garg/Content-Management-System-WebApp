<div class="row">

  <!-- Post Content Column -->
  <div class="col-lg-8">

    <!-- Title -->
    <h1 class="mt-4">{{post.title}}</h1>

    <!-- Author -->
    <p class="lead">
      by
      <a href="#">{{post.user.firstName}}</a>
    </p>

    <hr>

    <!-- Date/Time -->
    <p>Posted on {{generateDate post.date "MMMM Do YYYY"}}</p>

    <hr>

    <!-- Preview Image -->
    <img class="img-fluid rounded" src="/uploads/{{post.file}}" alt="">

    <hr>

    <!-- Post Content -->


    <blockquote class="blockquote">
      <div class="card-story">
        <div class="card-content">
          {{{post.body}}}
        </div>
      </div>
    </blockquote>



    <hr>

    {{#if user}}
    {{#if post.allowComments}}


    <!-- Comments Form -->
    <div class="card my-4">
      <h5 class="card-header">Leave a Comment:</h5>
      <div class="card-body">
        <form action="/admin/comments" method="post">
          <div class="form-group">
            <textarea name="body" class="form-control" rows="3"></textarea>
            <input type="hidden" value="{{post.id}}" name="id">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>


    {{else}}
    <h2>Comments not allowed for this post</h2>
    <br>
    <hr>

    {{/if}}


    {{else}}
    <h3>You need to <a href="/login">login</a> to comment</h3>
    <hr>
    {{/if}}


    {{#each post.comments}}

    <!-- Single Comment -->
    <div class="media mb-4">
      <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
      <div class="media-body">
        <h5 class="mt-0">{{user.firstName}}</h5>
        {{body}}
      </div>
    </div>

    {{/each}}


  </div>
  <!-- Sidebar Widgets Column -->
  <div class="col-md-4">

    <!-- Search Widget -->
    <div class="card my-4">
      <h5 class="card-header">Search</h5>
      <div class="card-body">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Search for...">
          <span class="input-group-btn">
            <button class="btn btn-secondary" type="button">Go!</button>
          </span>
        </div>
      </div>
    </div>

    <!-- Categories Widget -->
    <div class="card my-4">
      <h5 class="card-header">Categories</h5>
      <div class="card-body">
        <div class="row">

          {{#each categories}}

          <div class="col-lg-6">
            <ul class="list-unstyled mb-0">
              <li>
                <a href="#">{{name}}</a>
              </li>

            </ul>
          </div>

          {{/each}}


        </div>
      </div>
    </div>

    <!-- Side Widget -->
    <div class="card my-4">
      <h5 class="card-header">Side Widget</h5>
      <div class="card-body">
        You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap
        4 card containers!
      </div>
    </div>

  </div>

</div>
<!-- /.row -->